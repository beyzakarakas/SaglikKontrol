@{
    ViewData["Title"] = "Alt Vücut Egzersizleri";
}

@await Html.PartialAsync("_navbar")

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alt Vücut Egzersizleri</title>
    <link rel="stylesheet" href="~/css/AllExercises.css">
</head>

<body>
    <div class="container">
        <h3 class="category-title">Alt Vücut Egzersizleri</h3>
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card custom-card">
                    <div class="card-body">
                        <h5 class="card-title">Squats</h5>
                        <p class="card-text">Squat, bacak ve kalça kaslarını güçlendiren temel bir egzersizdir.</p>
                        <div class="video-container">
                            <iframe width="100%" height="315" src="https://www.youtube.com/embed/zB79uCHVN7k"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="card custom-card">
                    <div class="card-body">
                        <h5 class="card-title">Lunges</h5>
                        <p class="card-text">Lunge, bacakları güçlendiren ve dengeli kas gelişimi sağlayan bir
                            egzersizdir.</p>
                        <div class="video-container">
                            <iframe width="100%" height="315" src="https://www.youtube.com/embed/GmZXZgLmxhM"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="card custom-card">
                    <div class="card-body">
                        <h5 class="card-title">Wall Sit</h5>
                        <p class="card-text">Wall sit, bacakları güçlendiren ve dayanıklılığı arttıran bir egzersizdir.
                        </p>
                        <div class="video-container">
                            <iframe width="100%" height="315" src="https://www.youtube.com/embed/zBBH3_f9zkg"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_footer")
</body>

</html>
