@{
    ViewData["Title"] = "Giriş Yap";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>

<body>
    <center>
        <div class="login-container">
        <img src="~/images/saglikkontrol.png" width="150px" height="auto" alt="" srcset="">
            <div class="login-form">
                <h2>Giriş Yap</h2>
                <form asp-action="Login" method="POST">
                    <div class="form-group">
                        <label for="email">E-posta</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Şifre</label>
                        <input type="password" id="password" name="password" required>
                    </div><br>
                    <button type="submit">Giriş Yap</button><br><br>
                    <a href="/Home/SigninPage"> Hesabınız yok mu? Hemen kayıt olun </a>
                </form>
                @if (ViewData.ModelState != null && ViewData.ModelState[""] != null &&
                ViewData.ModelState[""].Errors.Count > 0)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState[""].Errors)
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
            </div>
        </div>
    </center>
</body>

</html>
