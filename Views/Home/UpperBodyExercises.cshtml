@{
    ViewData["Title"] = "Üst Vücut Egzersizleri";
}

@await Html.PartialAsync("_navbar")

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Üst Vücut Egzersizleri</title>
    <link rel="stylesheet" href="~/css/AllExercises.css">
</head>

<body>
    <div class="container">
        <h3 class="category-title">Üst Vücut Egzersizleri</h3>
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card custom-card">
                    <div class="card-body">
                        <h5 class="card-title">Push-ups</h5>
                        <p class="card-text">Şınav, üst vücut gücünü arttırmak için mükemmel bir egzersizdir.</p>
                        <div class="video-container">
                            <iframe width="100%" height="315" src="https://www.youtube.com/embed/RInajuHTU1U"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="card custom-card">
                    <div class="card-body">
                        <h5 class="card-title">Push-up & Rotation</h5>
                        <p class="card-text">Push-up & rotation, üst vücut gücünü arttıran ve dengeyi geliştiren bir
                            egzersizdir.</p>
                        <div class="video-container">
                            <iframe width="100%" height="315" src="https://www.youtube.com/embed/7Rg2iDuzJKs"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="card custom-card">
                    <div class="card-body">
                        <h5 class="card-title">Dips</h5>
                        <p class="card-text">Dips, trisepsi ve göğüs kaslarını güçlendiren bir egzersizdir.</p>
                        <div class="video-container">
                            <iframe width="100%" height="315" src="https://www.youtube.com/embed/2UzEtnxnpc4"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_footer")
</body>

</html>
